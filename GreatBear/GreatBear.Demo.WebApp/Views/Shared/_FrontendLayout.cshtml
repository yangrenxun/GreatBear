<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->
<!-- Head BEGIN -->
<head>
    <meta charset="utf-8">
    <title>Metronic Shop UI</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <link rel="shortcut icon" href="favicon.ico">
    <!-- Fonts START -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700|PT+Sans+Narrow|Source+Sans+Pro:200,300,400,600,700,900&amp;subset=all" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,600,700,900&amp;subset=all" rel="stylesheet" type="text/css"><!--- fonts for slider on the index page -->
    <!-- Fonts END -->
    <!-- Global styles START -->
    <link href="~/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Global styles END -->
    <!-- Theme styles START -->
    <link href="~/css/components.css" rel="stylesheet">
    <link href="~/css/frontend/pages/style-shop.css" rel="stylesheet" type="text/css">
    <link href="~/css/frontend/layout/style.css" rel="stylesheet">
    <link href="~/css/frontend/layout/style-responsive.css" rel="stylesheet">
    <link href="~/css/frontend/layout/themes/red.css" rel="stylesheet" id="style-color">
    <link href="~/css/frontend/layout/custom.css" rel="stylesheet">
    <!-- Theme styles END -->
    @if (IsSectionDefined("links"))
    {
        RenderSection("links", false);
    }
    @if (IsSectionDefined("css"))
    {
        RenderSection("css", false);
    }
</head>
<!-- Head END -->
<!-- Body BEGIN -->
<body class="ecommerce">

    @await Html.PartialAsync("_FrontendHeader.cshtml")

    <div class="main">
        <div class="container">
            @RenderBody()
        </div>
    </div>

    @await Html.PartialAsync("_FrontendFooter.cshtml")
    <!-- END fast view of a product -->
    <!-- Load javascripts at bottom, this will reduce page load time -->
    <!-- BEGIN CORE PLUGINS (REQUIRED FOR ALL PAGES) -->
    <!--[if lt IE 9]>
    <script src="../../assets/global/plugins/respond.min.js"></script>
    <![endif]-->
    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-migrate/jquery-migrate.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/js/frontend/layout/back-to-top.js" type="text/javascript"></script>
    <!-- END CORE PLUGINS -->
    <script src="~/lib/jQuery-slimScroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <!-- BEGIN PAGE LEVEL JAVASCRIPTS (REQUIRED ONLY FOR CURRENT PAGE) -->
    <script src="~/lib/fancybox/jquery.fancybox.min.js" type="text/javascript"></script>
    <script src="~/lib/owl-carousel/owl.carousel.min.js" type="text/javascript"></script><!-- slider for products -->
    <script src='~/lib/jquery-zoom/jquery.zoom.min.js' type="text/javascript"></script><!-- product zoom -->
    <script src="~/lib/bootstrap-touchspin/jquery.bootstrap-touchspin.min.js" type="text/javascript"></script><!-- Quantity -->
    <script src="~/js/frontend/layout/layout.js" type="text/javascript"></script>
    @if (IsSectionDefined("scripts"))
    {
        RenderSection("scripts", false);
    }
    <script type="text/javascript">
        jQuery(document).ready(function () {
            Layout.init();
            Layout.initOWL();
        });</script>
    <!-- END PAGE LEVEL JAVASCRIPTS -->
    @if (IsSectionDefined("javascript"))
    {
        RenderSection("javascript", false);
    }
</body>
<!-- END BODY -->
</html>